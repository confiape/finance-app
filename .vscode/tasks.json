{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Docker: Start Database",
      "type": "shell",
      "command": "docker-compose up -d",
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": [],
      "group": "build",
      "presentation": {
        "reveal": "always",
        "panel": "dedicated"
      }
    },
    {
      "label": "Docker: Stop Database",
      "type": "shell",
      "command": "docker-compose down",
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": [],
      "group": "build"
    },
    {
      "label": "Backend: Run",
      "type": "shell",
      "command": "go run ./cmd/api/main.go",
      "options": {
        "cwd": "${workspaceFolder}/backend"
      },
      "problemMatcher": [],
      "group": "build",
      "isBackground": true,
      "presentation": {
        "reveal": "always",
        "panel": "dedicated",
        "clear": true
      }
    },
    {
      "label": "Backend: Build",
      "type": "shell",
      "command": "go build -o finance-api ./cmd/api",
      "options": {
        "cwd": "${workspaceFolder}/backend"
      },
      "problemMatcher": ["$go"],
      "group": "build"
    },
    {
      "label": "Frontend: Serve",
      "type": "shell",
      "command": "npm start",
      "options": {
        "cwd": "${workspaceFolder}/frontend"
      },
      "problemMatcher": [],
      "group": "build",
      "isBackground": true,
      "presentation": {
        "reveal": "always",
        "panel": "dedicated",
        "clear": true
      }
    },
    {
      "label": "Frontend: Build",
      "type": "shell",
      "command": "npm run build",
      "options": {
        "cwd": "${workspaceFolder}/frontend"
      },
      "problemMatcher": [],
      "group": "build"
    },
    {
      "label": "Start All (DB + Backend + Frontend)",
      "dependsOn": [
        "Docker: Start Database",
        "Backend: Run",
        "Frontend: Serve"
      ],
      "dependsOrder": "sequence",
      "problemMatcher": [],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "label": "Database: Run Migrations",
      "type": "shell",
      "command": "docker exec -i finance-postgres psql -U postgres -d finance_db < database/migrations/001_initial_schema.sql && docker exec -i finance-postgres psql -U postgres -d finance_db < database/migrations/002_duplicate_index.sql",
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": [],
      "group": "build"
    }
  ]
}
